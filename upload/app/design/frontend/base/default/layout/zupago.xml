<?xml version="1.0"?>
<layout version="1.0.1">
    <zupago_processing_payment>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="zupago/payment" name="zupago_payment" template="zupago/payment.phtml" />
        </reference>
    </zupago_processing_payment>

    <zupago_processing_placeform>
        <reference name="root">
            <action method="setTemplate"><template>zupago/blank.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="zupago/placeform" name="zupago_placeform" template="zupago/placeform.phtml" />
        </reference>
    </zupago_processing_placeform>
</layout>
